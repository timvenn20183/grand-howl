<div class="row">
<div class="col-sm-12 text-center" style="background:url('/images/wolf.png') center no-repeat; height:150px; background-size: contain;">
	<div class="text-center" style="padding-left:500px;">
		<h3 style="line-height:100px;"><%= @category.name.pluralize %></h3>
	</div>
<div class="pull-right">
     <%= link_to content_tag(:span,'', :class => 'glyphicon glyphicon-th', :style => 'color : #333;'), { controller: :categories, action: :show, id: @category.friendly_id, view_style: 'grid'}, method: :get %>&nbsp;&nbsp;
     <%= link_to content_tag(:span,'', :class => 'glyphicon glyphicon-list', :style => 'color : #333;'), { controller: :categories, action: :show, id: @category.friendly_id, view_style: 'table'}, method: :get %>&nbsp;&nbsp;
</div>
</div>
</div>
<div style="clear:both; padding:10px;"></div>
    <%= render partial: '/categories/grid' if session[:view_style] == 'grid' or session[:view_style].blank?%>
    <%= render partial: '/categories/table' if session[:view_style] == 'table' %>
<div class="row">
	<div class="col-sm-12 text-center">
		<%= will_paginate @entries, renderer: BootstrapPagination::Rails %>
	</div>
</div>
<script>
$('.dropdown-toggle').dropdown()
</script>
